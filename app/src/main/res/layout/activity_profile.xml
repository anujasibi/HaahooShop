<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".profile">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:background="#5C25B7"
                android:id="@+id/re"
                android:layout_height="250dp">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="20dp"
                    android:id="@+id/io"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/back"/>

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:id="@+id/img"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/haahoologo"
                    android:layout_centerVertical="true"/>

                <ImageView
                    android:layout_width="20dp"
                    android:id="@+id/imgg"
                    android:layout_height="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/img"
                    android:scaleType="centerInside"
                    android:src="@drawable/edit"
                    android:layout_marginTop="50dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"

                    android:textAlignment="center"
                    android:text="Shop Name"
                    android:id="@+id/sname"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="#fff"
                    android:layout_below="@id/img"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_below="@+id/re"
                android:layout_marginTop="30dp"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/locat"
                    android:src="@drawable/location"/>

                <TextView
                    android:layout_width="match_parent"
                    android:text="Location"
                    android:gravity="center_vertical"
                    android:id="@+id/location"
                    android:textColor="#000"
                    android:layout_marginStart="10dp"
                    android:layout_toRightOf="@id/locat"
                    android:layout_height="25dp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_below="@+id/location"
                    android:layout_marginTop="30dp"
                    android:id="@+id/per"
                    android:src="@drawable/person"/>
                <TextView
                    android:layout_width="match_parent"
                    android:text="Ownewr"
                    android:gravity="center_vertical"
                    android:layout_below="@+id/location"
                    android:layout_marginTop="30dp"
                    android:id="@+id/owner"
                    android:layout_toRightOf="@id/per"
                    android:textColor="#000"
                    android:layout_marginLeft="10dp"
                    android:layout_height="25dp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_below="@+id/owner"
                    android:id="@+id/gst"
                    android:layout_marginTop="30dp"
                    android:src="@drawable/gst"/>

                <TextView
                    android:layout_width="match_parent"
                    android:text="GstNO"
                    android:gravity="center_vertical"
                    android:layout_below="@+id/owner"
                    android:layout_toRightOf="@id/gst"
                    android:layout_marginTop="30dp"
                    android:id="@+id/gstno"
                    android:textColor="#000"
                    android:layout_marginLeft="10dp"
                    android:layout_height="25dp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/cat"
                    android:layout_below="@+id/gstno"
                    android:layout_marginTop="30dp"
                    android:src="@drawable/cat"/>

                <TextView
                    android:layout_width="match_parent"
                    android:text="Category"
                    android:layout_toRightOf="@id/cat"
                    android:gravity="center_vertical"
                    android:layout_below="@+id/gstno"
                    android:layout_marginTop="30dp"
                    android:id="@+id/category"
                    android:textColor="#000"
                    android:layout_marginLeft="10dp"
                    android:layout_height="25dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:text="    Edit Profile"
                    android:layout_marginRight="50dp"
                    android:layout_below="@+id/category"
                    android:layout_marginTop="50dp"
                    android:id="@+id/edit"
                    android:textColor="#000"
                    android:gravity="center_vertical"
                   android:layout_alignParentRight="true"
                   android:drawableLeft="@drawable/editp"
                    android:layout_height="wrap_content"
                    />

            </RelativeLayout>

        </RelativeLayout>


    </ScrollView>





</RelativeLayout>